@{
    ViewBag.Title = "Categoría - Nuevo";
}
@section Styles {
    <link href="~/views/categoria/nuevo.css" rel="stylesheet" />
}

<form id="CategoriaNuevoFrm">
    <!-- Botón de guardar -->
    <button id="GuardarBtn" type="button">Guardar</button>
    <br />    <br />

    <!-- Campo para Nombre -->
    <label for="NombreTxt">Nombre</label>
    <input id="NombreTxt" type="text" autocomplete="off" />

    <br />
    <!-- Campo para Descripción -->
    <label for="DescripcionTxt">Descripción</label>
    <input id="DescripcionTxt" type="text" autocomplete="off" />

    <br />
    <!-- Campo para Suspendido -->
    <label for="SuspendidoChk">Suspendido</label>
    <input id="SuspendidoChk" type="checkbox" />

</form>

@section Scripts {
    <script src="~/views/categoria/nuevo.js"></script>
}
