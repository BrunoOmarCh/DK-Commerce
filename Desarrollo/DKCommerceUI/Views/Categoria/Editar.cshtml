@{
    ViewBag.Title = "Categoría - Editar";
}
@section Styles {
    <link href="~/views/categoria/editar.css" rel="stylesheet" />
}

<form id="CategoriaEditarFrm">
    <button id="GuardarBtn" type="button">Guardar</button>

    <br />
    <br />
    <label for="CategoriaIdTxt">ID</label>
    <input id="CategoriaIdTxt" type="text" value="@ViewBag.CategoriaId" readonly="readonly" />

    <br />
    <label for="NombreTxt">Nombre</label>
    <input id="NombreTxt" type="text" value="@ViewBag.Nombre" required />

    <br />
    <label for="DescripcionTxt">Descripción</label>
    <textarea id="DescripcionTxt">@ViewBag.Descripcion</textarea>

    <br />
    <label for="SuspendidoChk">Suspendido</label>
    <input id="SuspendidoChk" type="checkbox" @(ViewBag.Suspendido ? "checked" : "") />

</form>

@section Scripts {
    <script src="~/views/categoria/editar.js"></script>
}
