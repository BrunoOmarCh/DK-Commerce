@{
    ViewBag.Title = "Pedido - Nuevo";
}
@section Styles {
    <link href="~/views/pedido/nuevo.css" rel="stylesheet" />
}

<form id="PedidoNuevoFrm">
    <button id="GuardarBtn" type="button">Guardar</button>
    <br /><br />

    <label for="ClienteIdTxt">Cliente ID</label>
    <input id="ClienteIdTxt" type="text" autocomplete="off" />
    <br />

    <label for="IdEmpleadoTxt">ID Empleado</label>
    <input id="IdEmpleadoTxt" type="number" autocomplete="off" />
    <br />

    <label for="FechaPedidoTxt">Fecha Pedido</label>
    <input id="FechaPedidoTxt" type="date" />
    <br />

    <label for="FechaEntregaTxt">Fecha Entrega</label>
    <input id="FechaEntregaTxt" type="date" />
    <br />

    <label for="MontoTotalTxt">Monto Total</label>
    <input id="MontoTotalTxt" type="number" step="0.01" />
    <br />
</form>

@section Scripts {
    <script src="~/views/pedido/nuevo.js"></script>
}