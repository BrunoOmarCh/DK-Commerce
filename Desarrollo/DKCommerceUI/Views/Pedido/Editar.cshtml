@{
    ViewBag.Title = "Pedido - Editar";
}
@section Styles {
    <link href="~/views/pedido/editar.css" rel="stylesheet" />
}

<form id="PedidoEditarFrm">
    <button id="GuardarBtn" type="button">Guardar</button>
    <br /><br />

    <label for="PedidoIdTxt">Pedido ID</label>
    <input id="PedidoIdTxt" type="number" value="@ViewBag.PedidoId" readonly="readonly" />
    <br />

    <label for="ClienteIdTxt">Cliente ID</label>
    <input id="ClienteIdTxt" type="text" value="@ViewBag.ClienteId" />
    <br />

    <label for="IdEmpleadoTxt">ID Empleado</label>
    <input id="IdEmpleadoTxt" type="number" value="@ViewBag.IdEmpleado" />
    <br />

    <label for="FechaPedidoTxt">Fecha Pedido</label>
    <input id="FechaPedidoTxt" type="date" value="@ViewBag.FechaPedido" />
    <br />

    <label for="FechaEntregaTxt">Fecha Entrega</label>
    <input id="FechaEntregaTxt" type="date" value="@ViewBag.FechaEntrega" />
    <br />

    <label for="MontoTotalTxt">Monto Total</label>
    <input id="MontoTotalTxt" type="number" step="0.01" value="@ViewBag.MontoTotal" />
    <br />
</form>

@section Scripts {
    <script src="~/views/pedido/editar.js"></script>
}
