@{
    ViewBag.Title = "ContactoCliente - Nuevo";
}
@section Styles {
    <link href="~/views/contactoCliente/nuevo.css" rel="stylesheet" />
}
<form id="ContactoClienteNuevoFrm">
    <!-- Botón para guardar -->
    <button id="GuardarBtn" type="button">Guardar</button>
    <br /><br />

    <!-- Campos del formulario -->
    <label for="NombreContactoTxt">Nombre del Contacto</label>
    <input id="NombreContactoTxt" type="text" autocomplete="off" />
    <br />

    <label for="CargoContactoTxt">Cargo del Contacto</label>
    <input id="CargoContactoTxt" type="text" autocomplete="off" />
    <br />

    <label for="TipoDocumentoTxt">Tipo de Documento</label>
    <input id="TipoDocumentoTxt" type="text" autocomplete="off" />
    <br />

    <label for="NroDocumentoTxt">Número de Documento</label>
    <input id="NroDocumentoTxt" type="text" autocomplete="off" />
    <br />
</form>
@section Scripts {
    <script src="~/views/contactoCliente/nuevo.js"></script>
}

