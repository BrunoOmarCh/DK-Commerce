@{
    ViewBag.Title = "Empleado - Editar";
}
@section Styles {
    <link href="~/views/empleado/editar.css" rel="stylesheet" />
}

<form id="EmpleadoEditarFrm">
    <button id="GuardarBtn" type="button">Guardar</button>
    <br /><br />

    <label for="EmpleadoIdTxt">ID Empleado</label>
    <input id="EmpleadoIdTxt" type="text" value="@ViewBag.EmpleadoId" readonly="readonly" />
    <br />

    <label for="NombresTxt">Nombres</label>
    <input id="NombresTxt" type="text" value="@ViewBag.Nombres" />
    <br />

    <label for="ApellidoPaternoTxt">Apellido Paterno</label>
    <input id="ApellidoPaternoTxt" type="text" value="@ViewBag.ApellidoPaterno" />
    <br />

    <label for="ApellidoMaternoTxt">Apellido Materno</label>
    <input id="ApellidoMaternoTxt" type="text" value="@ViewBag.ApellidoMaterno" />
    <br />

    <label for="TipoDocTxt">Tipo Documento</label>
    <input id="TipoDocTxt" type="text" value="@ViewBag.TipoDocIdentidad" />
    <br />

    <label for="NroDocTxt">Nro Documento</label>
    <input id="NroDocTxt" type="text" value="@ViewBag.NroDocIdentidad" />
    <br />

    <label for="CargoTxt">Cargo</label>
    <input id="CargoTxt" type="text" value="@ViewBag.Cargo" />
    <br />

    <label for="EmailTxt">Email</label>
    <input id="EmailTxt" type="email" value="@ViewBag.Email" />
    <br />
</form>

@section Scripts {
    <script src="~/views/empleado/editar.js"></script>
}
