@{
    ViewBag.Title = "DetalleDePedido - Editar";
}
@section Styles {
    <link href="~/views/detalleDePedido/editar.css" rel="stylesheet" />
}

<form id="DetalleDePedidoEditarFrm">
    <button id="GuardarBtn" type="button">Guardar</button>
    <br /><br />

    <!-- Campos del formulario -->
    <label for="PedidoIdTxt">ID Pedido</label>
    <input id="PedidoIdTxt" type="text" value="@ViewBag.PedidoId" readonly="readonly" />
    <br />

    <label for="ProductoIdTxt">ID Producto</label>
    <input id="ProductoIdTxt" type="text" value="@ViewBag.ProductoId" readonly="readonly" />
    <br />

    <label for="PrecioNetoTxt">Precio Neto</label>
    <input id="PrecioNetoTxt" type="number" step="0.01" value="@ViewBag.PrecioNeto" />
    <br />

    <label for="CantidadTxt">Cantidad</label>
    <input id="CantidadTxt" type="number" value="@ViewBag.Cantidad" />
    <br />

    <label for="MontoSubTotalTxt">Monto SubTotal</label>
    <input id="MontoSubTotalTxt" type="number" step="0.01" value="@ViewBag.MontoSubTotal" readonly="readonly" />
    <br />
</form>

@section Scripts {
    <script src="~/views/detalleDePedido/editar.js"></script>
}
